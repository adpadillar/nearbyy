{
  "name": "@nearbyy/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/components/ui/*",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist/*.css"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "dev": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css"
  },
  "devDependencies": {
    "@nearbyy/eslint-config": "workspace:^0.2.0",
    "@nearbyy/prettier-config": "workspace:^0.1.0",
    "@nearbyy/tsconfig": "workspace:^0.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@nearbyy/eslint-config/base"
    ]
  },
  "prettier": "@nearbyy/prettier-config",
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.319.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "3.3.5",
    "tailwindcss-animate": "^1.0.7"
  }
}
