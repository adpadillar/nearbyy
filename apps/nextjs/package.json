    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tailwindcss": "3.3.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@nearbyy/eslint-config/base",
      "@nearbyy/eslint-config/nextjs",
      "@nearbyy/eslint-config/react"
