    "@nearbyy/core": "workspace:^",
    "@nearbyy/db": "workspace:^",
    "@nearbyy/embeddings": "workspace:^",
    "@nearbyy/ui": "workspace:^",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-table": "^8.11.7",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "@web-std/file": "^3.0.3",
